{
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      ".firebaserc",
      ".firebase/**",
      ".git/**",
      "dataconnect/**",
      "public/**",
      "README.md",
      "firestore.rules",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/contact",
        "function": {
          "functionId": "sendContactEmail",
          "region": "us-central1"
        }
      },
      {
        "source": "/api/whatsapp/webhook",
        "function": {
          "functionId": "whatsappWebhook",
          "region": "us-central1"
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
